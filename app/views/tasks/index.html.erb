<h1>All Tasks</h1>
<p><%= link_to "Create Task", new_task_path %></p>

<% @tasks.each do |task| %>
  <ul>
    <li>
      <%= link_to "#{task.name}", task_path(task) %>
      <br>
      <br>
      <%= link_to "Edit Task", edit_task_path(task) %>
      <br>
      <br>
      <%= link_to "Delete Task", task_path(task), method: :delete %>
    </li>
  </ul>
<% end  %>
